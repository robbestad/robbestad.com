  "description": "My node blog",
  "main": "js/app.js",
  "scripts": {
    "start": "NODE_ENV=development node index.js & gulp & watchify -o js/bundle.js -v -d .",
    "build": "NODE_ENV=production browserify . | node_modules/.bin/uglifyjs -cm > assets/bundle.min.js",
    "test": "jest",
    "postinstall": "browserify . | node_modules/.bin/uglifyjs -cm > assets/bundle.min.js"
  },
  "author": "Sven Anders Robbestad",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^3.2.0",
    "browserify": "~4.2.2",
    "compression": "^1.1.0",
    "envify": "~2.0.1",
    "express": "^4.9.5",
    "express-stormpath": "^0.4.5",
    "flux": "^2.0.0",
    "font-awesome": "^4.2.0",
    "jade": "^1.7.0",
    "jest-cli": "~0.1.17",
    "jquery": "^2.1.1",
    "jquery-browserify": "^1.8.1",
    "mailgun": "^0.5.0",
    "piler": "^0.5.1",
    "react": "~0.11.2",
    "reactify": "~0.14.0",
    "swig": "^1.4.2",
    "resolve": "~0.6.1",
    "uglify-js": "~2.4.15",
    "watchify": "~0.10.2",
    "react-router": "^0.8.0"

  },
  "browserify": {
    "transform": [
        ["reactify", {"es6": true}],
      "envify"
    ],
    "bootstrap": {
      "exports": "bootstrap",
      "depends": {
        "jquery": "$"
      }
    }
  },
  "jest": {
