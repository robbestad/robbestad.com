    "gulp-imagemin": "^1.0.1",
    "gulp-jshint": "^1.8.5",
    "gulp-nodemon": "^1.0.4",
    "gulp-notify": "^1.8.0",
    "gulp-plumber": "^0.6.6",
    "gulp-sass": "^1.0.0",
    "gulp-shell": "^0.2.9"
  }
